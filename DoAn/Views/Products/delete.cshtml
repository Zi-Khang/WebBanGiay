@model DoAn.Models.Product

@{
    ViewBag.Title = "delete";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Bạn có chắc muốn xóa sản phẩm</h2>


<form action="/products/delete?id=@Model.ProductID" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-12">
            <label for="ProductID">ID</label>
            <input class="form-control" type="text" name="ProductID" id="ProductID" value="@Model.ProductID" readonly />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label for="ProductName">Name</label>
            <input class="form-control" type="text" name="ProductName" id="ProductName" placeholder="Name" value="@Model.ProductName" readonly />
        </div>
        <div class="col-md-4">
            <label for="Description">Description</label>
            <input class="form-control" type="text" name="Description" id="Description" placeholder="Description" value="@Model.Description" readonly/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label for="Price">Price</label>
            <input class="form-control" type="number" name="Price" id="Price" placeholder="Price" value="@Model.Price" readonly/>
        </div>
        <div class="col-md-4">
            <label for="BrandID">Brand</label>
            <select class="form-control" name="BrandID" id="BrandID">
                <option value="@Model.BrandID">@Model.Brand.BrandName</option>
            </select>
        </div>

    </div>
    <div class="row">
        <div class="col-md-8">
            <label for="ProductImage">ProductImage</label>
            <img src="~/Contents/images/@Model.ProductImage" style="height: 200px; width:200px; margin: 10px;" id="ProductImage" />
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-success">
        Delete
    </button>
    <a href="/products/Index">
        <button type="button" class="btn btn-danger">
            Cancel
        </button>
    </a>
    
</form>
